package Esercitazioni;
import java.util.Scanner;
import java.util.Random;
public class TestLancio {
	public TestLancio(int a) {
		facce = a;
		generatore = new Random();
	}
	public TestLancio() {
		facce = 6;
		generatore = new Random();
	}
	public int lancia() {
		return 1 + generatore.nextInt(facce);
	}
	private Random generatore;
	private int facce;

	public static void main(String[] args) {
		TestLancio d = new TestLancio(6);
		try (Scanner in = new Scanner(System.in)) {
			System.out.println("Quanti lanci vuoi simulare?");
			int n = in.nextInt();
			for (int i = 0; i < n; i++) {
				int r = d.lancia();
				System.out.println("Ã¨ uscito il numero " + r);
			} // for
		} // try
	}// main
}// class