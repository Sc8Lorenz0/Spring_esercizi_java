//lancio del dado attraverso due classi, veidi "Dado.java"
public class TestLancio {

	  public static void main(String[] args)
	  {
	      Dado d = new Dado(6);
	      Scanner in = new Scanner(System.in);
	      System.out.println("Quanti tiri fai?");
	      int n = in.nextInt();
	      for( int i = 0 ; i < n ; i++)
	      {
	          int r = d.lancia();
	          System.out.println("è uscito il numero " + r);
	      }
	  }
	}